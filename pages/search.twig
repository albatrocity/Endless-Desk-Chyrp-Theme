{% extends "layouts/default.twig" %}
{% block content %}
{% if posts.paginated %}
					<h2>${ "Search results for &#8220;%s&#8221;" | translate | format(search | escape) }</h2>
{% endif %}
{% for post in posts.paginated %}
{% include "feathers/" ~ post.feather ~ ".twig" %}
{% else %}
					<h2>${ "No Results" | translate }</h2>
					<p>${ "Your search did not return any results." | translate }</p>
{% endfor %}
{% endblock %}